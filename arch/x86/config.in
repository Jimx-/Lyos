#
# For a description of the syntax of this configuration file,
# see documentation/config/kconfig-language.txt.
#

config 64BIT
       bool "64-bit kernel" if ARCH = "x86_64"
       default SUBARCH = "x86_64"
    help
         Say yes to build a 64-bit kernel - formerly known as x86_64
         Say no to build a 32-bit kernel - formerly known as i386

config X86_32
       def_bool y
    depends on !64BIT

config X86_64
    def_bool y
    depends on 64BIT

source "kernel/config.in"

source "drivers/config.in"

menu "Power management and ACPI options"

source "drivers/acpi/config.in"

endmenu

menu "Processor type and features"

config X86_LOCAL_APIC
	def_bool y
	depends on SMP

config X86_IO_APIC
	def_bool y
	depends on SMP

config SMP
    bool "Symmetric multiprocessing"
    help
      Enable support for systems that have more than one processor.

config SMP_MAX_CPUS
    int "Max number of CPUs"
    depends on SMP
    default "8"
    help
      The default value is 8 CPUs.

endmenu
